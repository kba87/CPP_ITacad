#include <iostream>

using namespace std;

int main()
{
    int choice;
    cout << "Encryption press: 1" << endl;
    cout << "Decryption press: 2" << endl;

    cin >> choice;
    cin.ignore();
    switch(choice)
    {
    case(1):
        cout<< "You have choosen encryption "<<endl;
        break;
    case(2):

        cout<< "You have choosen decryption "<<endl;
        break;
    }
    if (choice == 1){
        // encryption
        string msg;
        cout << "Enter message: ";
        getline(cin, msg);

        int key;
        cout << "Enter key: ";
        cin >> key;
        cin.ignore();

        string encryptedText = msg;

        for (int i = 0; i < msg.size(); i ++){

            if((char)msg[i]==' '){
                continue;
            } else {

                if((msg[i]+key) > 122) {
                    int temp = (msg[i] + key) - 122;
                    encryptedText[i] = 96 + temp;
                } else if (msg[i] + key > 90 && msg[i] <= 96){
                    int temp = (msg[i] + key) - 90;
                    encryptedText[i] = 64 + temp;
                } else {
                    encryptedText[i] += key;
                }
            }
        }

        cout << "Encrypted Message: " << encryptedText;

    } else if (choice == 2){

        string encpMsg;
        cout << "Enter message" << endl;
        cout << "Enter text: ";
        getline(cin, encpMsg);

        int dcyptKey;
        cout << "Enter key: ";
        cin >> dcyptKey;
        cin.ignore();

        string decryptedText = encpMsg;

        for (int i = 0; i < encpMsg.size(); i++){
            if(encpMsg[i]==32){
                continue; //ignoring space
            } else {
                if((encpMsg[i] - dcyptKey) < 97 && (encpMsg[i] - dcyptKey) > 90){
                    int temp = (encpMsg[i] - dcyptKey) + 26;
                    decryptedText[i] = temp;
                } else if((encpMsg[i] - dcyptKey) < 65){
                    int temp = (encpMsg[i] - dcyptKey) + 26;
                    decryptedText[i] = temp;
                } else {
                    decryptedText[i] = encpMsg[i] - dcyptKey;
                }
            }
        }

        cout << "Decrypted Message: " << decryptedText << endl;

    } else {
        cout << "Invalid choice";
    }
    cout<<endl;

    return 0;

}
